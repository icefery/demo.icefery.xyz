<?xml version="1.0" encoding="utf-8"?>
<!-- @formatter:off -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".activity.PersistenceBySharedPreferencesActivity"
>
    <EditText
        android:ems="15"
        android:gravity="center"
        android:hint="SharedPreferences 名"
        android:id="@+id/student_name_input"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
    />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
    >
        <EditText
            android:ems="15"
            android:gravity="center"
            android:hint="键"
            android:id="@+id/sp_k_input"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
        />

        <LinearLayout android:layout_height="wrap_content" android:layout_weight="4" android:layout_width="0dp" android:orientation="vertical">
            <LinearLayout android:layout_height="match_parent" android:layout_weight="1" android:layout_width="match_parent" android:orientation="horizontal">
                <EditText
                    android:ems="15"
                    android:gravity="center"
                    android:hint="值"
                    android:id="@+id/id_input"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                />
                <Button
                    android:id="@+id/save_sp_kv_btn"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="保存"
                    android:textAllCaps="false"
                />
            </LinearLayout>

            <Button android:id="@+id/query_sp_k_btn" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="查询"/>

            <Button android:id="@+id/remove_sp_k_btn" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="移除"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
    >

        <Button
            android:id="@+id/delete_sp_btn"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="删除"
            android:textAllCaps="false"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<!-- @formatter:on -->

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="xyz.icefery.demo.view.home.HomeFragment"
>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
    >

        <ImageView android:layout_height="match_parent" android:layout_weight="1" android:layout_width="0dp" android:src="@mipmap/ghost"/>

        <TextView
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="+"
            android:textSize="30sp"
        />

        <ImageView android:layout_height="match_parent" android:layout_weight="1" android:layout_width="0dp" android:src="@mipmap/android"/>

        <TextView
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="="
            android:textSize="30sp"
        />

        <ImageView android:layout_height="match_parent" android:layout_weight="1" android:layout_width="0dp" android:src="@mipmap/fire"/>
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingHorizontal="24dp"
        android:text="教主的移动工具箱"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
    />
</androidx.constraintlayout.widget.ConstraintLayout>

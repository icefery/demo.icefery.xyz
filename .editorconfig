root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# java
[{*.java, pom.xml, build.gradle, build.gradle.kts, settings.gradle, settings.gradle.kts}]
indent_style = space
indent_size = 4

# kotlin
[{*.kt, *.kts}]
indent_style = space
indent_size = 4

# sql
[*.sql]
indent_style = space
indent_size = 4

# python
[*.py]
indent_style = space
indent_size = 4

# go
[.go]
indent_style = tab

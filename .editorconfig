root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# maven
[pom.xml]
indent_style = space
indent_size = 4

# gradle
[{build.gradle,settings.gradle,build.gradle.kts,settings.gradle.kts}]
indent_style = space
indent_size = 4

# java
[*.java]
indent_style = space
indent_size = 4

# kotlin
[*.{kt,kts}]
indent_style = space
indent_size = 4

# scala
[*.scala]
indent_style = space
indent_size = 2

# sql
[*.sql]
indent_style = space
indent_size = 4

# python
[*.py]
indent_style = space
indent_size = 4

# shell
[*.sh]
indent_style = space
indent_size = 4

# go
[*.go]
indent_style = tab
indent_size = 4
